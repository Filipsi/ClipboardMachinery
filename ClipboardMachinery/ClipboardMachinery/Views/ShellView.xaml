<Window x:Class="ClipboardMachinery.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClipboardMachinery.Views"
        xmlns:b="clr-namespace:Bibliotheque.Controls;assembly=Bibliotheque"
        xmlns:cal="http://www.caliburnproject.org"
        mc:Ignorable="d"  Width="512" Background="{x:Null}"
        ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True"
        AllowsTransparency="True" WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Rectangle RenderTransformOrigin="0.5, 0.5" Height="64" VerticalAlignment="Top">
            <Rectangle.Fill>
                <VisualBrush Stretch="Uniform">
                    <VisualBrush.Visual>
                        <Path Data="{StaticResource IconGear}" Fill="{StaticResource PanelControlBrush}" />
                    </VisualBrush.Visual>
                </VisualBrush>
            </Rectangle.Fill>
            <Rectangle.RenderTransform>
                <RotateTransform x:Name="NoFreeze" />
            </Rectangle.RenderTransform>
            <Rectangle.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(Rectangle.RenderTransform).(RotateTransform.Angle)"
                                To="360" Duration="0:0:20" RepeatBehavior="Forever" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Rectangle.Triggers>
        </Rectangle>

        <StackPanel Margin="0,32,0,0" VerticalAlignment="Top">
            <Border Height="32" BorderBrush="{StaticResource PanelBackgroundBrush}" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="10,10,0,0">
                <Grid Margin="4">
                    <Viewbox HorizontalAlignment="Left" >
                        <ItemsControl x:Name="MenuItems">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel MinHeight="16" Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid cal:Bind.Model="{Binding}" cal:Message.Attach="[Event MouseLeftButtonUp] = [Action SelectMenuItem($dataContext)]" MaxWidth="32" Margin="8" Cursor="Hand" Background="Transparent">
                                        <Path Data="{Binding Icon}" Fill="{Binding Color}" Stretch="Uniform" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Viewbox>

                    <Label Content="{Binding SelectedMenuItem.Name}" Foreground="{StaticResource PanelControlBrush}" VerticalContentAlignment="Center" HorizontalAlignment="Center" FontSize="16" Padding="0"/>
                </Grid>
            </Border>

            <ContentControl MaxHeight="580" x:Name="ActiveItem" />

            <Border Height="16" BorderBrush="{StaticResource PanelBackgroundBrush}" Background="{StaticResource PanelBackgroundBrush}" CornerRadius="0,0,10,10" VerticalAlignment="Top" />
        </StackPanel>
    </Grid>
</Window>

