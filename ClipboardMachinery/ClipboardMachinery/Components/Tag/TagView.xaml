<UserControl
    x:Class="ClipboardMachinery.Components.Tag.TagView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d" d:DesignWidth="96"
    FontSize="14" FontFamily="Yu Gothic UI Light">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Background="#E5E5E5">

            <TextBlock
                Padding="8,0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Foreground="Black"
                Text="{Binding Model.Name, FallbackValue='tag'}"
                FontFamily="Calibri Light" />
        </Border>

        <Border
            Grid.Column="1"
            Background="#f2f1ef">

            <TextBlock
                Padding="8,0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Foreground="Black"
                Text="{Binding Model.Value, FallbackValue='value'}"
                FontFamily="Calibri Light" />
        </Border>

    </Grid>

</UserControl>
